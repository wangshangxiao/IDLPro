pro IOSocImageViewer::Inform_User, event
;------------------------------------------------------------------------------------------------------------
compile_opt strictarr, logical_predicate

  if ~arg_present(event) then event = 0

  Image_Pixel_Location      = self.Image_Pixel_Location
  Image_Pixel_Location[1]   = self.ImageInfo.nl - Image_Pixel_Location[1] -1
  Actual_Pixel_Location     = self.Actual_Pixel_Location
  Actual_Pixel_Location[1]  = self.ImageInfo.nl - Actual_Pixel_Location[1] -1

  ImageViewerInfo  = {$
            Central_Pixel_Location: Image_Pixel_Location, $
            Actual_Pixel_Location: Actual_Pixel_Location, $
            Event:event}
           
  self.oInform_user->ImageViewer_User_Info, ImageViewerInfo
end